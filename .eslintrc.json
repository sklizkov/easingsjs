{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-var": "error",
    "indent": ["error", 2],
    "no-multi-spaces": ["error", {
      "ignoreEOLComments": true,
      "exceptions": {
        "VariableDeclarator": true
      }
    }],
    "no-console": "error",
    "key-spacing": ["error", {
      "align": {
        "beforeColon": true,
        "afterColon": true,
        "on": "colon"
      }
    }]
  },
  "ignorePatterns": ["dist/**/*.*", "plop-templates/**/*.*", "scripts/**/*.*"]
}
