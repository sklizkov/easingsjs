{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "no-var": "error",
    "indent": ["error", 2],
    "no-multi-spaces": "error",
    "no-console": "error"
  },
  "ignorePatterns": ["dist/**/*.*", "plop-templates/**/*.*"]
}
